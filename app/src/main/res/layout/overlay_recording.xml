<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overlay_layout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_gravity="top"
    android:layout_weight="0.25"
    android:background="#80000000">
    <LinearLayout
        android:id="@+id/overlay_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_gravity="center">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/record_button_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/record_button"
            android:text="Record"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/stop_button_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/stop_button"
            android:text="Stop"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:layout_marginStart="16dp"
            android:visibility="visible" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/close_button_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/flush_button"
            android:text="Close"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:layout_marginStart="16dp"
            android:visibility="visible" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/audio_toggle_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audio Output" />
    </LinearLayout>

</FrameLayout>
